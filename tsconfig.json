{
   "ts-node": {
      "require": [
         "tsconfig-paths/register"
      ]
   },
   "exclude": [
      "node_modules",
      "build",
      "dist",
      "bundle",
   ],
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "rootDir": ".",
      "baseUrl": ".",
      "paths": {
         "@core/data-source": ["core/databases/data-source.ts"],
         "@core/decorators": ["core/decorators/index.ts"],
         "@core/providers": ["core/providers/index.ts"],
         "@core/models": ["core/models/index.ts"],
         "@core/conversation": ["core/conversation/index.ts"],
         "@core/common": ["core/common/index.ts"],
         "@core/bot": ["core/bot/index.ts"],
         "@core/webserver": ["core/server/webserver.ts"],
      },
      "target": "es2020",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "allowSyntheticDefaultImports": true
   }
}
